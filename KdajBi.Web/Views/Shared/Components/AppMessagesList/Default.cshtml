@using KdajBi.Core.Models;
@model IEnumerable<UserAppMessage>
@if (Model.Count() > 0) { 
<div class="p-3">       
<h6>Sporočila <span class="badge badge-secondary">@Html.Raw(Model.Count())</span></h6>
@foreach (var item in Model)
{
    <div class="card bg-secondary mb-1 text-xs" id="app-messages" data-id="@Html.Raw(item.Id)">
        @*<div class="card-header p-1">
            <h3 class="card-title">
                @Html.Raw(item.AppMessage.Subject)
            </h3>
        </div>*@
        <div class="card-body p-1">
            <span class="badge badge-secondary" style="float: right;">@Html.Raw(item.AppMessage.MessageDate.Value.ToString("dd.MM.yyyy hh:mm"))</span>
            <p>@Html.Raw(item.AppMessage.Message)</p>
        </div>
        <div class="card-footer px-auto p-1 text-xs">
            <button type="button" class="btn btn-success p-1">Potrdi</button>
        </div>
    </div>
}
</div>
}