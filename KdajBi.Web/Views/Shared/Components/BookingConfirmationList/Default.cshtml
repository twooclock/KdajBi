@using KdajBi.Core.Models;
@model IEnumerable<BookingConfirmation>
@if (Model.Count() > 0) { 
<div class="p-3">
<h6>Naročila</h6>
@foreach (var item in Model)
{
    <div class="card bg-secondary" id="booking-confirmation" data-id="@Html.Raw(item.Id)">
        <div class="card-header">
            <h3 class="card-title">
                @Html.Raw(item.AppointmentToken.Client.FullName)
            </h3>
        </div>
        <div class="card-body">
            <p>@Html.Raw(item.AppointmentToken.Service)</p>
            <p><a href="~/appointments/index?date=@Html.Raw(item.Start.ToString("yyyy-MM-dd"))">@Html.Raw(item.Start.ToString("dd.MM.yyyy"))</a></p>
            <p>@Html.Raw(item.Start.ToString("HH:mm")) - @Html.Raw(item.End.ToString("HH:mm"))</p>
        </div>
        <div class="card-footer px-auto">
            <button type="button" class="btn btn-danger">Izbriši</button>
            <button type="button" class="btn btn-success">Potrdi</button>
        </div>
    </div>
}
</div>

}
