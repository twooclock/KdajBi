@using KdajBi.Core.Models;
@model IEnumerable<Location>

<li  class="nav-item  @if (Model.Count() > 1) { <text>smLocation has-treeview</text>}">
    @if(Model.Count()>1)
    { 
        <a href="@Url.Content("~/locations")" class="nav-link">
        <i class="nav-icon fas fa-store"></i>
        <p>Saloni</p>
        <i class="fas fa-chevron-down right"></i>
    </a>

    }
    @if (Model.Count() > 1)
    { @Html.Raw(@"<ul class=""nav nav-treeview"" style=""display: none;"">"); }
    

    @foreach (var item in Model)
    {
        @:<li class="nav-item @if (Model.Count() == 1) { <text>smLocation</text>}">
            @:<a href="@Url.Content("~/location/"+item.Id)" class="nav-link">
                    @if (Model.Count() > 1)
                    { @Html.Raw(@"<i class=""far nav-icon""></i>"); }
                    else
                    { @Html.Raw(@"<i class=""nav-icon fas fa-store""></i>"); }
                    
                <p>@Html.Raw(item.Name)</p>
            @:</a>
        @:</li>
    }
    @if (Model.Count() > 1) { @Html.Raw(@"</ul>"); }
    
</li>
